@model LanguageCenter.Areas.Home.Models.Class.NewClassModel
@using LanguageCenter.Layer.DataLayer.Object
@{
    ViewBag.Title = "Class";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
